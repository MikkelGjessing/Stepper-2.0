{
  "manifest_version": 3,
  "name": "Stepper",
  "version": "1.0.0",
  "description": "A step-by-step guiding chat panel for variance reduction",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Open Stepper"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}
